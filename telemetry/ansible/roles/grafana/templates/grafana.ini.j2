# Configuration file for Grafana
# Generated by Ansible - DO NOT EDIT MANUALLY

[paths]
data = {{ grafana_data_dir }}
logs = {{ grafana_logs_dir }}
plugins = {{ grafana_plugins_dir }}
provisioning = {{ grafana_provisioning_dir }}

[server]
protocol = {{ grafana_protocol }}
http_port = {{ grafana_http_port }}
domain = {{ grafana_domain }}
http_addr = 0.0.0.0

[database]
type = sqlite3

[security]
admin_user = {{ grafana_security_admin_user }}
admin_password = {{ grafana_security_admin_password }}

# Anonymous access configuration
[auth.anonymous]
enabled = {{ grafana_auth_anonymous_enabled }}
org_name = {{ grafana_auth_anonymous_org_name }}
org_role = {{ grafana_auth_anonymous_org_role }}
hide_version = {{ grafana_auth_anonymous_hide_version }}

# Disable login form for read-only access
[auth]
disable_login_form = {{ grafana_disable_login_form }}

# Set home dashboard
[dashboards]
default_home_dashboard_path = {{ grafana_dashboards_local_path }}/{{ grafana_home_dashboard }}.json

# UI appearance settings
[users]
auto_assign_org_role = Viewer

# Hide UI elements for anonymous users
[analytics]
reporting_enabled = false
check_for_updates = false

[feature_toggles]
# Hide elements and enable kiosk mode for cleaner UI
publicDashboards = true

[panels]
disable_sanitize_html = false

[analytics.google]
analytics_enabled = false

[kiosk]
enabled = {{ grafana_kiosk_mode }}

[pure_kiosk]
enabled = {{ grafana_kiosk_mode }}
hide_top_nav_bar = {{ grafana_hide_top_nav_bar }}
hide_sidebar = {{ grafana_hide_sidebar }}
hide_footer = {{ grafana_hide_footer }}
